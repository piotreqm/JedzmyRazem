@model InzWebApi.Models.ResetPassword

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Resetuj hasło";
}
    <div class="header-content">
        <div class="header-content-inner text-center" style="color: white">
            <h1>Resetowanie hasła</h1>
            @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <br />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group">
                    @Html.Label("Adres e-mail", new { @style = "font-size: 18px; padding-top: 51px" })
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @style = "width:500px; color: black" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Nowe hasło", new { @style = "font-size: 18px; padding-top: 15px" })
                    <br />
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @style = "width:500px; color: black" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Powtórz nowe hasło", new { @style = "font-size: 18px; padding-top: 15px" })
                    <br />
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @style = "width:500px; color: black" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-default" value="Resetuj" />
                    </div>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>